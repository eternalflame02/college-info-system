# ============================================
# MBCET CSE Semantic Chunking Pipeline
# Environment Configuration
# ============================================
# Copy this file to .env and customize values

# ------------------------------------------
# Scraping Configuration
# ------------------------------------------

# Base URL for MBCET website
BASE_URL=https://mbcet.ac.in

# CSE Department URL (starting point for crawler)
CSE_DEPARTMENT_URL=https://mbcet.ac.in/departments/computer-science-engineering/

# Delay between requests in seconds (be respectful to servers)
REQUEST_DELAY=1.0

# Maximum number of retries for failed requests
MAX_RETRIES=3

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum crawl depth for URL discovery
MAX_CRAWL_DEPTH=3

# Maximum URLs to crawl
MAX_URLS=100

# User agent string for requests
USER_AGENT=MBCET-Chunking-Pipeline/1.0

# ------------------------------------------
# Chunking Configuration
# ------------------------------------------

# Minimum words per chunk (chunks smaller than this may be merged)
MIN_CHUNK_WORDS=80

# Maximum words per chunk (hard limit)
MAX_CHUNK_WORDS=700

# Preferred chunk size (target size for optimal retrieval)
PREFERRED_CHUNK_WORDS=450

# Soft limit before splitting (chunks try to stay under this)
SOFT_LIMIT_WORDS=600

# Number of overlapping sentences between chunks
OVERLAP_SENTENCES=2

# ------------------------------------------
# OCR Configuration (for scanned PDFs)
# ------------------------------------------

# Path to Tesseract executable
# Windows: C:/Program Files/Tesseract-OCR/tesseract.exe
# Linux/macOS: tesseract (if in PATH)
TESSERACT_CMD=tesseract

# OCR language(s) - comma separated
OCR_LANG=eng

# ------------------------------------------
# Logging Configuration
# ------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable file logging
LOG_TO_FILE=true
